root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 2
tab_width = 2

[*.json]
indent_size = 2
tab_width = 2

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2
